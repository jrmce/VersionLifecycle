{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=versionlifecycle;Username=postgres;Password=${POSTGRES_PASSWORD};Pooling=true;Maximum Pool Size=20;Minimum Pool Size=5;Connection Idle Lifetime=300"
  },
  "Jwt": {
    "Key": "${JWT_SECRET}",
    "Issuer": "VersionLifecycleApp",
    "Audience": "VersionLifecycleUsers",
    "ExpirationMinutes": 60
  },
  "Hangfire": {
    "Enabled": true,
    "WorkerCount": 4,
    "QueuePollInterval": 15
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/app-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
